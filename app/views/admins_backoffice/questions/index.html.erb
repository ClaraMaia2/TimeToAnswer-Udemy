<!DOCTYPE html>
<html lang="en">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Listing Questions</h1>
        </div>
    </div>

    <br>

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Description</th>
                <th>Subject</th>
                <th>
                    <%= link_to new_admins_backoffice_question_path, class:"btn btn-success btn-circle btn-sm" do %>
                        <i class="fa fa-plus"></i>
                    <% end %>
                </th>
            </tr>
        </thead>
        <tbody>
            <% @questions.each do |question| %>
                <tr>
                    <td><%= question.id %></td>
                    <td><%= question.description.truncate(50) %></td>
                    <td><%= question.subject.description.truncate(30) %></td>
                    <td style="width: 120px">
                        <%= link_to edit_admins_backoffice_question_path(question), class:"btn btn-primary btn-circle btn-sm" do %>
                            <i class="fa fa-edit"></i>
                        <% end %> 

                        <%= link_to admins_backoffice_question_path(question.id), method: :delete, class:"btn btn-danger btn-circle btn-sm", data: { confirm: "Are you sure?" } do %>
                            <i class="fa fa-minus"></i>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <div class="text-center">
        <%= paginate @questions %>
    </div>
</html>