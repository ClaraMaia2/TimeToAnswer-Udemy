<!DOCTYPE html>
<html lang="en">
    
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Listing Administrators</h1>
    </div>
</div>

<br>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @admins.each do |admin| %>
            <tr>
                <td><%= admin.id %></td>
                <td><%= admin.email %></td>
                <td style="width: 120px">
                    <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-primary btn-circle btn-sm" do %>
                        <i class="fa fa-edit"></i>
                    <% end %>
                    
                    <a href= "#" class="btn btn-danger btn-circle btn-sm">
                        <i class="fa fa-minus"></i>
                    </a>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
</html>