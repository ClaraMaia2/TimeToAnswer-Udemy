<% if @answer.correct %>
    <div class="alert alert-success" style="margin-left: 10px; margin-right: 10px;">
        <h1>Correct answer</h1>
    </div>
<% else %>
    <div class="alert alert-danger" style="margin-left: 10px; margin-right: 10px;">
        <h1>Wrong answer!</h1>  
    </div>
<% end %>